@using LendADogDemo.MVC.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<section class="page-section clearfix">
    <div class="container intro-text left-0 text-center bg-faded p-5 rounded">
        <div class="row ">
            <div class="col-sm-8">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Use a local account to log in.</h4>
                        <hr />
                        @Html.ValidationSummary(true,"", new { @class = "text-danger" })

                        <div class="form-group row">
                            <div class="input-group mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 col-form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">@@example.com</span>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-pill badge-danger " })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="input-group mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 col-form-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @aria_describedby = "basic-addon1" })
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Password</span>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-pill badge-danger " })
                            </div>
                        </div>

                        <div class="form-group row">

                            <div class="col-sm-8">
                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <input type="submit" value="Log in" class="btn btn-outline-primary" />
                            </div>
                        </div>
                    }
                </section>
            </div>
            <div class="col-sm-4 align-self-end">
                <img src="~/img/Sleeping-Puppy.jpg" class="img-fluid" />
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
