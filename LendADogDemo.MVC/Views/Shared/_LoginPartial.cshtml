@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav mx-auto">
        <li class="nav-item active px-lg-4">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "PersonalDashboardMain", "PersonalDashboard", routeValues: new { userId = User.Identity.GetUserId() }, htmlAttributes: new { title = "Manage", @class = "nav-link text-uppercase text-expanded", @style = "color:lightyellow" })
        </li>
        <li class="nav-item active px-lg-4">
        <a class = "nav-link text-uppercase text-expanded" style = "color:lightyellow" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav mx-auto">
        <li class="nav-item active px-lg-4">
        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink",@class="nav-link text-uppercase text-expanded", @style = "color:lightyellow" })
        </li>
        <li class="nav-item active px-lg-4">
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-uppercase text-expanded", @style = "color:lightyellow" })
        </li>
    </ul>
}
